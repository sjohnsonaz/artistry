<section class="section">
    <header>Information</header>
    <div class="section-content section-content-space">
        <h3>Progress Bar</h3>
        <div class="progress-bar">
            <div style="--progress-bar-progress: 50%; --progress-bar-string: '50%';"></div>
        </div>

        <h3>Tooltip</h3>
        <button class="button tooltip tooltip-right tooltip-open" aria-label="Tooltip text">Tooltip</button>

        <h3>Popover</h3>
        <button class="button popover-trigger">
            <div class="popover popover-right popover-align-center popover-open">
                <div class="popover-content">Popover text</div>
            </div>
            Popover
        </button>

        <h3>Popover Menu</h3>
        <a href="#" class="button popover-trigger popover-closed" id="clickShowPopoverMenu">
            <div class="popover-mask"></div>
            <div class="popover popover-right popover-align-center">
                <div class="popover-content">Popover text</div>
            </div>
            Popover
        </a>

        <h3>Notification</h3>
        <aside class="notification">
            <header>Notification</header>
            <div class="notification-content">
                Notification content
            </div>
        </aside>
        <aside class="notification notification-success">
            <header>Success</header>
            <div class="notification-content">
                Success content
            </div>
        </aside>
        <aside class="notification notification-info">
            <header>Information</header>
            <div class="notification-content">
                Information content
            </div>
        </aside>
        <aside class="notification notification-warning">
            <header>Warning</header>
            <div class="notification-content">
                Warning content
            </div>
        </aside>
        <aside class="notification notification-danger">
            <header>Danger</header>
            <div class="notification-content">
                Danger content
            </div>
        </aside>
        <button id="clickShowNotifications" class=button>Show Notifications</button>
        <div class="notification-container hidden">
            <aside class="notification notification-success">
                <header>Success</header>
                <div class="notification-content">
                    Success content
                </div>
            </aside>
        </div>

        <h1>Badge</h1>

        <span class="badge">1</span>
    </div>
</section>
<h3>Modal</h3>
<button id="clickOpenModal" class="button">Open Modal</button>
<div id="modal" class="modal modal-animate-top">
    <div class="modal-content">
        <div class="modal-header">
            <h1 class="modal-title">Title</h1>
            <div class="modal-controls">
                <button id="clickCloseModal" class="button">Close Modal</button>
            </div>
        </div>
        <div class="modal-body">
            <form class="form">
                <div class="form-lock-screen"></div>
                <div class="form-container">
                    <label class="form-label">
                        <div class="form-title">
                            Title
                        </div>
                        <div class="form-input">
                            <input class="input input-fill" type="text" />
                        </div>
                    </label>
                </div>
                <div class="form-container">
                    <label class="form-label">
                        <div class="form-title">
                            First Name
                        </div>
                        <div class="form-input">
                            <input class="input input-fill" type="text" />
                        </div>
                    </label>
                </div>
                <div class="form-container">
                    <label class="form-label">
                        <div class="form-title">
                            Last Name
                        </div>
                        <div class="form-input">
                            <input class="input input-fill" type="text" />
                        </div>
                    </label>
                </div>
                <div class="form-divider"></div>
                <div class="form-action">
                    <button class="button">Cancel</button>
                    <button class="button button-primary">Save</button>
                </div>
                <div class="form-divider"></div>
                <div class="form-container">
                    <label class="form-label">
                        <div class="form-title">
                            Option
                        </div>
                        <div class="form-input">
                            <input class="input input-fill" type="text" />
                        </div>
                    </label>
                </div>
            </form>
        </div>
        <div class="modal-footer"></div>
    </div>
</div>
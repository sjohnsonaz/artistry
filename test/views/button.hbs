<h2>Input</h2>
<section class="section">
    <header class="section-title">Button</header>
    <div class="section-content section-content-space">
        <h3>Individual Buttons</h3>
        <div>
            <button class="button">Edit</button>
            <button class="button button-primary">Save</button>
            <button class="button button-danger">Delete</button>
        </div>

        <h3>Disabled Buttons</h3>
        <div>
            <button class="button" disabled>Edit</button>
            <button class="button button-primary" disabled>Save</button>
            <button class="button button-danger" disabled>Delete</button>
        </div>

        <h3>Text Buttons</h3>
        <div>
            <button class="button button-textonly">Edit</button>
            <button class="button button-textonly button-primary">Save</button>
            <button class="button button-textonly button-danger">Delete</button>
        </div>

        <h3>Outline Buttons</h3>
        <div>
            <button class="button button-outline">Edit</button>
            <button class="button button-outline button-primary">Save</button>
            <button class="button button-outline button-danger">Delete</button>
        </div>

        <h3>Button Sizes</h3>
        <div>
            <button class="button button-small">Small</button>
            <button class="button">Medium</button>
            <button class="button button-large">Large</button>
        </div>

        <h3>Button Group</h3>
        <p>
            <div class="button-group">
                <button class="button">Edit</button>
                <button class="button button-primary">Save</button>
                <button class="button button-danger">Delete</button>
            </div>
        </p>
        <p>
            <div class="button-group">
                <button class="button button-textonly">Edit</button>
                <button class="button button-textonly button-primary">Save</button>
                <button class="button button-textonly button-danger">Delete</button>
            </div>
        </p>
        <p>
            <div class="button-group">
                <button class="button button-outline">Edit</button>
                <button class="button button-outline button-primary">Save</button>
                <button class="button button-outline button-danger">Delete</button>
            </div>
        </p>

        <h3>Button Bar</h3>
        <div>
            <div class="button-bar">
                <button class="button">Edit</button>
                <button class="button button-primary">Save</button>
                <button class="button button-danger">Delete</button>
            </div>
        </div>

        <h3>Action Bar</h3>
        <div>
            <div class="action-bar">
                <button class="button">Edit</button>
                <button class="button button-primary">Save</button>
                <button class="button button-danger">Delete</button>
            </div>
        </div>

        <h3>Lockable Buttons</h3>
        <div>
            <button class="button button-lockable" id="clickLockableEdit">
                <div class="button-text">Lockable Edit</div>
                <div class="button-spinner">Locked</div>
            </button>
            <button class="button button-lockable button-primary" id="clickLockableSave">
                <div class="button-text">Lockable Save</div>
                <div class="button-spinner">Locked</div>
            </button>
            <button class="button button-lockable button-danger" id="clickLockableDelete">
                <div class="button-text">Lockable Delete</div>
                <div class="button-spinner">Locked</div>
            </button>
        </div>
    </div>
</section>
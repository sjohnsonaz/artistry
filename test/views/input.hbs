<section class="section">
    <header>Advanced Input</header>
    <div class="section-content">
        <h3>Range</h3>
        <input type="range" class="range" />

        <h3>Toggle</h3>
        <div class="toggle">
            <label>
                <div class="toggle-box">
                    <input type="checkbox">
                    <div class="toggle-button">&nbsp;</div>
                </div>
            </label>
        </div>
        <h3>Calendar</h3>
        <div class="button-group popover-trigger">
            <input type="text" class="input" />
            <a class="button" data-theme="primary">
                <div class="popover popover-bottom popover-align-left">
                    <div class="popover-content">
                        <div class="calendar">
                            <div class="calendar-title">
                                <div class="calendar-year-title">
                                    <button class="calendar-year-down button">&lt;</button>
                                    <select class="select calendar-year-name">
                                        <option value="2018">2018</option>
                                    </select>
                                    <button class="calendar-year-up button">&gt;</button>
                                </div>
                                <div class="calendar-month-title">
                                    <button class="calendar-month-down button">&lt;</button>
                                    <strong class="calendar-month-name">
                                        <select class="select">
                                            <option value="February">February</option>
                                        </select>
                                    </strong>
                                    <button class="calendar-month-up button">&gt;</button>
                                </div>
                            </div>
                            <table>
                                <thead>
                                    <tr>
                                        <th>S</th>
                                        <th>M</th>
                                        <th>T</th>
                                        <th>W</th>
                                        <th>T</th>
                                        <th>F</th>
                                        <th>S</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td colspan="4"></td>
                                        <td><a>1</a></td>
                                        <td><a>2</a></td>
                                        <td><a>3</a></td>
                                    </tr>
                                    <tr>
                                        <td><a>4</a></td>
                                        <td><a class="calendar-day-selected">5</a></td>
                                        <td><a>6</a></td>
                                        <td><a class="calendar-day-current">7</a></td>
                                        <td><a>8</a></td>
                                        <td><a>9</a></td>
                                        <td><a>10</a></td>
                                    </tr>
                                    <tr>
                                        <td><a>11</a></td>
                                        <td><a>12</a></td>
                                        <td><a>13</a></td>
                                        <td><a>14</a></td>
                                        <td><a>15</a></td>
                                        <td><a>16</a></td>
                                        <td><a>17</a></td>
                                    </tr>
                                    <tr>
                                        <td><a>18</a></td>
                                        <td><a>19</a></td>
                                        <td><a>20</a></td>
                                        <td><a>21</a></td>
                                        <td><a>22</a></td>
                                        <td><a>23</a></td>
                                        <td><a>24</a></td>
                                    </tr>
                                    <tr>
                                        <td><a>25</a></td>
                                        <td><a>26</a></td>
                                        <td><a>27</a></td>
                                        <td><a>28</a></td>
                                        <td colspan="3"></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                Calendar
            </a>
        </div>
    </div>
</section>
@import "carousel-settings.styl";
.carousel {
    display: block;
    position: relative;
    padding: 0;
    margin: 0;
    overflow: hidden;
    transition: height 0.5s;
    &:after {
        display: table;
        content: '';
        clear: both;
    }
    & > div {
        display: block;
        position: absolute;
        padding: 0;
        margin: 0;
        min-height: $carousel-min-height;
        right: 100%;
        left: -100%;
        transition: left 0.5s, right 0.5s;
        visibility: hidden;
        &.carousel-selected {
            right: 0;
            left: 0;
            position: relative;
            visibility: visible;
        }
        &.carousel-selected ~ div {
            right: -100%;
            left: 100%;
        }
    }
    & > div.carousel-selected.carousel-selecting, 
    &.carousel-run > div {
        visibility: visible;
        &.carousel-selected {
            position: absolute;
            z-index: 1;
        }
    }
}

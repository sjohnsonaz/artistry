.layer {
    --layer-locked-filter: blur(5px);
    --layer-fade-duration: 0.3s;
    --layer-delay-duration: 0.3s;
    --layer-mask-background-color: rgba(1, 1, 1, 0.5);

    position: static;

    &[data-status="locked"] {
        position: fixed;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        transform: translate(0);
        overflow-y: hidden;
    }
}

body.body-scroll {
    &[data-lock="hide"] {
        .layer {
            margin-right: var(--scrollbar-width);
            position: fixed;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;
            transform: translate(0);
            overflow-y: hidden;
        }
    }
}
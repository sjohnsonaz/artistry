@require "form-settings.styl";

.form {
    &.form-lock {
        position: relative;

        & > .form-lock-screen {
            display: block;
            position: absolute;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;
            background-color: rgba(0, 0, 0, 0.2);
            z-index: 100;
            vertical-align: middle;
            text-align: center;
        }
    }
}

.form-text {
    margin: $form-spacing auto;
    width: $form-line-width;
}

.form-container {
    margin: $form-spacing auto;
    width: $form-line-width;

    .form-text {
        display: block;
        margin: 0;
        padding: $form-spacing 0;
        clear: both;
    }

    .form-label {
        display: flex;
        flex-direction: row;
        align-items: center;

        .form-title {
            margin: 0 $form-spacing;
            width: $form-label-width;
            font-weight: bold;
            text-align: end;
        }

        .form-input {
            flex-grow: 1;
        }
    }
}

.form-divider {
    border-top: 1px solid $form-boder-color;
}

.form-action {
    margin: $form-spacing auto;
    width: $form-line-width;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    padding: 0;

    & > * {
        margin: 0 $form-spacing 0 0;
        &:last-child {
            margin-right: 0;
        }
    }
}

@media screen and (max-width: $form-width) {
    .form {
    }

    .form-container {
        width: auto;
        margin: $form-spacing;

        &:not(.form-container-inline) {
            .form-label {
                margin: $form-spacing 0;
                flex-direction: column;
                align-items: flex-start;

                .form-title {
                    margin: 0;
                    width: auto;
                }

                .form-input {
                    width: 100%;
                }
            }
        }

        &.form-container-inline {
            .form-label {
                .form-title {
                    margin: 0;
                    text-align: start;
                }

                .form-input {
                    margin: 0 $form-spacing;
                    text-align: start;
                    flex-grow: initial;
                }
            }
        }
    }

    .form-text {
        width: auto;
        margin: $form-spacing;
    }

    .form-action {
        width: auto;
        margin: 0;
        padding: ($form-spacing / 2) $form-spacing;

        & > * {
            margin: ($form-spacing / 2);
        }
    }
}